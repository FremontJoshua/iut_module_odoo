<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

      <!-- Vue tree -->
    <record model="ir.ui.view" id="iut.model_tree_view">
      <field name="name">iut.model.tree</field>
      <field name="model">iut.it.model</field>
      <field name="arch" type="xml">
        <tree string="Model">
            <field name="name"/>
            <field name="ref"/>
            <field name="brand_id"/>
        </tree>
      </field>
    </record>

      <!-- Vue form -->
      <record model="ir.ui.view" id="iut.model_form_view">
        <field name="name">iut.model.form</field>
        <field name="model">iut.it.model</field>
        <field name="arch" type="xml">
            <form string="Model">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <span class="oe_inline">Modèle</span>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="ref"/>
                            <field name="brand_id"/>
                            <field name="type_ids" />
                        </group>
                        <group>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

      <!-- Actions -->
      <record model="ir.actions.act_window" id="iut_model_action">
      <field name="name">Modèle</field>
      <field name="res_model">iut.it.model</field>
      <field name="view_mode">tree,form</field>
    </record>

  </data>
</odoo>